<Window x:Class="P3___Networked_Consumer.FullScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FullScreenWindow"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="Black"
        KeyDown="Window_KeyDown">
    <Grid>
        <!-- Video Player -->
        <MediaElement x:Name="mediaElement"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Stop"
                      Stretch="UniformToFill"/>

        <!-- Enhanced Circular "x" Button with Lower Opacity -->
        <Button Content="x"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="10"
        Padding="5"
        Click="ExitButton_Click"
        Width="40"
        Height="40"
        Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <!-- Base styling -->
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" Opacity="0.7">
                                <GradientStop Color="White" Offset="0"/>
                                <GradientStop Color="LightGray" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Gray"
                                BorderThickness="1">
                                    <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- Mouse over: change gradient, drop shadow, and increase opacity -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" Opacity="1">
                                                    <GradientStop Color="LightGray" Offset="0"/>
                                                    <GradientStop Color="Gray" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="border" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <!-- Pressed: darken the gradient -->
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" Opacity="1">
                                                    <GradientStop Color="Gray" Offset="0"/>
                                                    <GradientStop Color="DarkGray" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
